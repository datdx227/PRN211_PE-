@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using WebAppMVC_EF.Models
@model Product
<form asp-controller="Product" asp-action="Update" method="post">
    ProductId:<input type="text" asp-for=ProductId readonly/>
    <br/>Name:<input type="text" asp-for=ProductName/>
    <span asp-validation-for=ProductName></span>
    <br />UnitPrice: <input type="text" asp-for=UnitPrice/>
    <span asp-validation-for=UnitPrice></span>
    <br />UnitsInStock: <input type="text" asp-for=UnitsInStock/>
    <span asp-validation-for=UnitsInStock></span>
    <br />Image: <input type="text" asp-for=Image/>
    <span asp-validation-for=Image></span>
    <br />CategoryID: 
        <select asp-for=CategoryId>
        @foreach (Category c in @ViewBag.Categories)
        {
            @if (@c.CategoryId == @Model.CategoryId)
            {
                        <option value=@c.CategoryId selected>@c.CategoryName</option>
            }
            else
            {
                        <option value=@c.CategoryId>@c.CategoryName</option>
            }
        }
    </select>
    <br /><input type="submit" value="UPDATE"/>
</form>